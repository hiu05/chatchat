{
  "version": 2,
  "builds": [
    {
      "src": "fe/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "be/src/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "be/src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "fe/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}